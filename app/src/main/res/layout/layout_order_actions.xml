<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order_actions"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:background="@color/white"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/ll_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_accepted"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/accepted" />

        <TextView
            android:id="@+id/tv_accepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="accept"
            android:textAllCaps="true"
            android:textColor="@color/text_grey"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_reject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/cancel" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="reject"
            android:textAllCaps="true"
            android:textColor="@color/text_grey"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_abandoned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_abandoned"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/cancel" />

        <TextView
            android:id="@+id/tv_abandoned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Abandoned"
            android:textAllCaps="true"
            android:textColor="@color/text_grey"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_dispatched"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_dispatched"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/dispatched" />

        <TextView
            android:id="@+id/tv_dispatched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="dispatched"
            android:textAllCaps="true"
            android:textColor="@color/text_grey"
            android:textSize="12dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_delivered"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_delivered"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/delivered" />

        <TextView
            android:id="@+id/tv_delivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="delivered"
            android:textAllCaps="true"
            android:textColor="@color/text_grey"
            android:textSize="12dp" />

    </LinearLayout>


</LinearLayout>